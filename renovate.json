{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "Next.js",
      "matchPackagePrefixes": [
        "next",
        "eslint-config-next",
        "react",
        "react-dom",
        "@types/node",
        "@types/react",
        "typescript"
      ]
    },
    {
      "groupName": "Material UI",
      "matchPackagePrefixes": [
        "eslint@emotion/react",
        "@emotion/styled",
        "@fontsource/roboto",
        "@mui/icons-material",
        "@mui/material"
      ]
    },
    {
      "groupName": "Tools",
      "matchPackagePrefixes": ["eslint", "eslint-plugin-strict-dependencies"]
    }
  ]
}
